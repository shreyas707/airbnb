<%= form_for @user_type do |f| %>
<% if @user_type.errors.any? %>
	<h4>These errors prohitibted the form from being saved: </h4>
	<ul style = "color:red;">
		<% @user_type.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>

	<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label"><br/><br/>
		<%= f.text_field :name %>
		<label>Name</label>
	</div>

	<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label"><br/><br/>
		<%= f.text_area :description %>
		<label>Description</label>
	</div>

	<%= f.submit, class:"mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
<% end %>