<h3>Listing Room Types</h3>

<% if @room_types.empty? %>
	<p>No room type found.</p>
<% else %>

	<table border = "1">
		<thead>
			<tr>
				<th>#</th>
				<th>Name</th>
				<th>Show</th>
			</tr>
		</thead>

		<tbody>
			<% @room_types.each_with_index do |room_type,index|%>
			<tr>
				<td> <%= index + 1 %></td>
				<td> <%= room_type.name %></td>
				<td> <%= link_to "Show", room_type_path(room_type.id) %> </td>
			</tr>
			<% end %>
		</tbody>
	</table>
<% end %>
<h2><%= link_to "Add room type", new_room_type_path %></h2>