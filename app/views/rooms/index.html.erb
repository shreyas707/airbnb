<% if @rooms.empty? %>
	<p>No rooms found.</p>
<% else %>

	<table border = "1">
		<thead>
			<tr>
				<th>#</th>
				<th>Name</th>
				<th>Description</th>
				<th>Price</th>
				<th>Rules</th>
				<th>City</th>
				<th>Room type</th>
				<th>Show</th>
			</tr>
		</thead>

		<tbody>
			<% @rooms.each_with_index do |room,index|%>
			<tr>
				<td> <%= index + 1 %></td>
				<td> <%= room.name %></td>
				<td> <%= room.description %> </td>
				<td> <%= room.price %></td>
				<td> <%= room.rules %></td>
				<td> <%= room.city.name %></td>
				<td> <%= room.room_type.name %></td>
				<td> <%= link_to "Show", room_path(room.id) %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
<% end %>

<% if current_user.role == "admin" || current_user.role == "host" %> 
	<h2><%= link_to "Add room", new_room_path %></h2>
<% end %>