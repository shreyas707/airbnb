<%= form_for @amenity do |f| %>
	<% if @amenity.errors.any? %>
	<h4>These errors prohitibted the form from being saved: </h4>
	<ul style = "color:red;">
		<% @amenity.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
	<% end %>
	<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
		<%= f.text_field :name %>
		<label>Name</label>	
	</div>
	<br/>
	<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
		<label>Description</label>
		<%= f.text_area :description %>
	</div>
	<br/>
	<%= f.submit 'Submit', class:"mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
<% end %>